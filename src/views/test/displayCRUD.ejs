<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            text-align: center;
        }

        .btn-edit{
            outline: none;
            border: none;
            background: orange;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
        .btn-delete{
            outline: none;
            border: none;
            background: red;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <p>Display crud</p>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% for(let i=0; i< dataTable.length; i++ ) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstname %>
                </td>
                <td>
                    <%= dataTable[i].lastname %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button"> Edit </a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button"> Delete </a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>